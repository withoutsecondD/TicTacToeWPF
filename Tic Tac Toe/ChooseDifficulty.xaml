<Window x:Class="Tic_Tac_Toe.ChooseDifficulty"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tic_Tac_Toe"
        mc:Ignorable="d"
        Title="ChooseDifficulty" Height="450" Width="400">
    <Grid>
        <TextBlock FontSize="22px" TextAlignment="Center" HorizontalAlignment="Center" Margin="0,20,0,0" TextWrapping="Wrap" Text="Choose difficulty" VerticalAlignment="Top" Width="174"/>
        <Button x:Uid="1" Content="Difficulty 1" Padding="10px" FontSize="16px" HorizontalAlignment="Center" Margin="0,82,0,0" VerticalAlignment="Top" Width="144" Click="Button_Click"/>
        <Button x:Uid="2" Content="Difficulty 2" Padding="10px" FontSize="16px" HorizontalAlignment="Center" Margin="0,130,0,0" VerticalAlignment="Top" Width="144" Click="Button_Click"/>
        <Button x:Uid="3" Content="Difficulty 3" Padding="10px" FontSize="16px" HorizontalAlignment="Center" Margin="0,178,0,0" VerticalAlignment="Top" Width="144" Click="Button_Click"/>

    </Grid>
</Window>
